<% include partials/header %>

	<h1>Prayer Request Journal!</h1>

	<h2><%= summary %></h2>

	<h2>Add Prayer Request</h2>
	<form method="POST" action="/prayers/add">
		<label for="title">Title</label>
		<input type="text" name="title" id="title">

		<label for="prayer">Prayer Request</label>
		<input type="text" name="prayer">
		
		<input type="submit" value="Add">
	</form>

	<ul>
		<% prayerRequests.forEach(function(request){ %>
			<li>
				<h3><%= request.title %> &nbsp;&nbsp;&nbsp; <a href="#" 
					class="deletePrayer" 
					data-id="<%= request._id %>">Delete</a></h3>
			</li>
		<% }) %>
	</ul>

 <% include partials/footer %>